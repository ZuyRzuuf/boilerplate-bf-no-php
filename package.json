{
  "name": "boilerplate-bf-no-php",
  "version": "0.1.0",
  "description": "Boilerplate backend and frontend app with node, express, sequelize, apollo server, webpack, babel, react, apollo client, jest and enzyme",
  "main": "index.js",
  "keywords": [
    "boilerplate",
    "graphql",
    "node",
    "express",
    "sequelize",
    "apollo",
    "apollo server",
    "webpack",
    "babel",
    "react",
    "apollo",
    "apollo client",
    "jest",
    "enzyme"
  ],
  "private": false,
  "dependencies": {
    "apollo-boost": "^0.1.16",
    "apollo-cache-inmemory": "^1.3.6",
    "apollo-client": "^2.4.3",
    "apollo-datasource-rest": "^0.1.5",
    "apollo-link-http": "^1.5.5",
    "apollo-server-express": "^2.1.0",
    "body-parser": "^1.18.3",
    "concurrently": "^4.0.1",
    "express": "^4.16.4",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.0",
    "merge-graphql-schemas": "^1.5.7",
    "mysql2": "^1.6.1",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-apollo": "^2.2.4",
    "react-dom": "^16.5.2",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "sequelize": "^4.40.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.8.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "jest-transform-graphql": "^2.1.0",
    "jsdom": "^13.0.0",
    "lodash": "^4.17.11",
    "nodemon": "^1.18.8",
    "react-dev-utils": "^6.1.1",
    "react-test-renderer": "^16.6.1",
    "sequelize-cli": "^5.1.0",
    "webpack": "^4.21.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-dev-server": "^3.1.9",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-node-externals": "^1.7.2"
  },
  "scripts": {
    "build": "rm -rf build && webpack --mode development --config webpack.server.config.js && webpack --mode development --config webpack.app.dev.config.js",
    "build-dev": "rm -rf build && webpack --mode development --config webpack.server.config.js && webpack --mode development --config webpack.app.dev.config.js",
    "build-prod": "rm -rf build && webpack --mode production --config webpack.server.config.js && webpack --mode production --config webpack.app.prod.config.js",
    "client": "webpack-dev-server --mode development --hot --host 0.0.0.0 --disable-host-check --port 3000",
    "eslint-fix": "./node_modules/.bin/eslint --fix --ext .js,.jsx src",
    "run-seeds": " ./node_modules/.bin/sequelize db:seed:all",
    "server": "./node_modules/nodemon/bin/nodemon.js --exec babel-node server.js",
    "server-database": "./node_modules/nodemon/bin/nodemon.js --exec babel-node server.database.js",
    "server-node": "./node_modules/nodemon/bin/nodemon.js --exec babel-node server.node.js",
    "start-wds": "concurrently \"npm run server\" \"npm run client\"",
    "start-both": "concurrently \"npm run server-database\" \"npm run server-node\"",
    "start-backend": "node ./build/server.js",
    "start-database": "npm run server-database",
    "start": "concurrently \"npm run server-database\" \"npm run start-backend\"",
    "sequelize-skeleton": "./node_modules/sequelize-cli/lib/sequelize init:models; ./node_modules/sequelize-cli/lib/sequelize init:config",
    "test": "jest",
    "test:coverage": "npm run test -- --coverage",
    "test:verbose": "npm run test -- --verbose",
    "test:watch": "npm run test -- --watch",
    "test:watch:verbose": "npm run test -- --watch --verbose"
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{js,jsx}",
      "!<rootDir>/src/index.js",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/build/**",
      "!**/coverage/**"
    ],
    "setupFiles": [
      "<rootDir>/config/setupJSDOM.js",
      "<rootDir>/config/setupTests.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "transform": {
      "\\.(gql|graphql)$": "<rootDir>/node_modules/jest-transform-graphql",
      ".*": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ]
  }
}
