{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "declaration": false,
    "jsx": "react",
    "noLib": false,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true
  },
  "compileOnSave": false,
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}